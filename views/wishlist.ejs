<%- include('./partials/header') %>
<div class="wishlist-container" style="max-width:600px;margin:40px auto;padding:24px;background:#fafafa;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.07);">
    <h2 style="text-align:center;margin-bottom:24px;">My Wishlist</h2>
    <ul class="wishlist-items" style="list-style:none;padding:0;">
        <!-- Wishlist items will be rendered here -->
        <li style="display:flex;align-items:center;justify-content:space-between;padding:12px 0;border-bottom:1px solid #eee;">
            <div>
                <strong>Item Name</strong><br>
                <span style="color:#888;font-size:0.95em;">Item description goes here.</span>
            </div>
            <form style="margin:0;">
                <button type="button" style="background:#e74c3c;color:#fff;border:none;padding:6px 12px;border-radius:4px;cursor:pointer;">Remove</button>
            </form>
        </li>
        <!-- If wishlist is empty -->
        <!-- <li style="text-align:center;color:#888;">Your wishlist is empty.</li> -->
    </ul>
    
</div>
